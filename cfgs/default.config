         #
         # }
         
         # verbos a ser inseridos em cada location
         
         # allow_methods GET POST DELETE; # Permite os métodos GET, POST e DELETE para esta localização.
         # allow_methods GET POST PUT HEAD; # Para outra localização
         #
         #
    }
}
